<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/GreenColor"
        android:textColor="@color/Marom"
        android:gravity="center"
        android:textStyle="bold|normal"
        android:text="DTC Customer care"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Marom"
        android:height="4dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Care : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DTC Service"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold|italic"
            android:typeface="serif" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HeadOffice Address"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Marom"
        android:height="5dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/CCDTextViewDetail"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:text="TextView"
            android:textStyle="italic"
            android:typeface="serif" 
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Marom"
        android:height="5dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Call Customer care"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:typeface="serif" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 24Hr Help Line : "
                android:typeface="serif"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceMedium" />



            <TextView
                android:id="@+id/CCDTextViewCallNum1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91-11-41400400" 
                android:textSize="20dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="3dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Mobile Users    : "
                android:typeface="serif"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/CCDTextViewCallNum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91-11-23370236" 
                android:textSize="20dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.dtc.nic.in" 
        android:autoLink="web"
        android:textColor="@color/orange"
        android:gravity="center"
        android:typeface="serif"
        android:textSize="20dp"
        />


    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="3dp" />


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           	android:background="@color/Marom"
           	android:height="4dp" />


        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Calls"
            android:typeface="serif"
            android:textStyle="italic"
            android:textSize="18dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/CCDButtonFire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Fire   "
                android:textSize="16dp"
                android:typeface="serif" />

            <Button
                android:id="@+id/CCDButtonAmbulance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.46"
                android:text="Ambulance"
                android:textSize="16dp"
                android:typeface="serif" />

            <Button
                android:id="@+id/CCDButtonPolice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text=" Police "
                android:textSize="16dp"
                android:typeface="serif" 
                />
        </LinearLayout>


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hint: Click Text or Button to Call"
            android:typeface="serif"
            android:textStyle="italic"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
